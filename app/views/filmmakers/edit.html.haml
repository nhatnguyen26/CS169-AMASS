%div.col-md-8.col-md-offset-2#filmmaker-div
  %div.row.header-block#pic-n-info
    %div.col-md-3.col-sm-2.col-xs-2#image-div
      =image_tag "lorem-ipsum.jpg", :id => "ourimage"
    %div.col-md-6
      %h1#filmmaker-name
        = @resource.user.name
      %h4#email
        = @resource.user.email
      %h4#location
        Location: 
        = best_in_place @resource, :location, inplace_params('input', 'location')
        %a{:id => 'location'}edit
      %h4#specialties
        Specialties: 
        = best_in_place @resource, :specialty, inplace_params('input', 'specialty')
        %a{:id => 'specialty'}edit
  
  %div.row.header-block.profile-block
    %h3.topic
      %b Filmmaker Summary
      %a{:id => 'summary', :class => 'edit-butt link-hover'}edit
    %h4.one-margin.filmmaker-button
      = best_in_place @resource, :summary, inplace_params('textarea','summary')
    %h3.topic
      %b About Me
      %a{:id => 'about', :class => 'edit-butt link-hover'}edit
    %h4.one-margin.filmmaker-button
      = best_in_place @resource, :about, inplace_params('textarea','about')
  
  %div.row.header-block.profile-block
    %h3.topic
      %b Experience Summary
      %a{:id => 'expSum', :class => 'edit-butt link-hover'}edit
    %h4.one-margin.filmmaker-button
      = best_in_place @resource, :experience, inplace_params('textarea','expSum')
    %h3.topic
      %b Skills and Expertise
      %a{:id => 'skills', :class => 'edit-butt link-hover'}edit
    %h4.one-margin.filmmaker-button
      = best_in_place @resource, :skills, inplace_params('textarea','skills')
    %h3.topic
      %b Links to Work Samples
      %a{:id => 'links', :class => 'edit-butt link-hover'}edit
    %h4.one-margin.filmmaker-button
      = best_in_place @resource, :links, inplace_params('textarea', 'links')

  = button_to "<< Back", filmmaker_path, :class => "btn btn-md", :method => 'get', :id => "back-button"
