%div.col-md-8.col-md-offset-2#nonprofit-div
  %div.row.header-block#pic-n-info
    %div.col-md-3.col-sm-2.col-xs-2#image-div
      =image_tag "lorem-ipsum.jpg", :id => "ourimage"
    %div.col-md-6 
      %h1#name
        = @nonprofit.user.name
      %h4#categories
        category HARDCODED
      %h4#location
        location HARDCODED
      %h4
        %b Active Projects:
        = @active_projects.count
      %h4
        %b Completed Projects:
        = @completed_projects.count
    %div.col-md-1
      -if logged_in_as_correct_user @nonprofit.user.id
        = link_to 'Edit Profile', edit_nonprofit_path(@nonprofit),{:class => 'btn btn-large', :id => 'edit-button'}
  
  %div.row.header-block.profile-block
    %h3.topic
      %b About
    %h4
      = @nonprofit.about
  
    %h3.topic.extra-space
      %b Links
    %h4
  
  %div.row.header-block.profile-block
    %h3.topic
      %b Active Projects
    %h4
      - @active_projects.each do |project|
        %div.col-sm-4.col-md-3.col-lg-3#project
          %div.thumbnail
            %a{href: "#{project_path(project.id)}"}
              - if thumbnail_exist?(project.id)
                %img{src:"assets/projects/#{project.id}/thumb.jpg"}
              - else
                %img{src:"assets/balloon.jpg"}
            %div.caption
              %h2= project.category
              %h3{align: "center"}= link_to project.name, project_path(project.id)
              %h4= project.organization
              %p= project.description
              %p= "Budget: $#{project.budget}"

  %div.row.header-block.profile-block 
    %h3.topic.extra-space
      %b Completed Projects
    %h4
      - @completed_projects.each do |project|
        %div.col-sm-4.col-md-3.col-lg-3#project
          %div.thumbnail
            %a{href: "#{project_path(project.id)}"}
              - if thumbnail_exist?(project.id)
                %img{src:"assets/projects/#{project.id}/thumb.jpg"}
              - else
                %img{src:"assets/balloon.jpg"}
            %div.caption
              %h2= project.category
              %h3{align: "center"}= link_to project.name, project_path(project.id)
              %h4= project.organization
              %p= project.description
              %p= "Budget: $#{project.budget}"
