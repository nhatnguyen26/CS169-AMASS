.container
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign Up
        .panel-body
          %form#new_user.new_user{"accept-charset" => "UTF-8", action: "/users", method: "post"}
            = form_tag users_path(@user) do
              - if @user.errors.any?
                .error-messages
                  %ul
                    - for message in @user.errors.full_messages
                      %li= message
              %fieldset
                .form-group
                  %input#user_name.form-control{name: "user[name]", placeholder: "Name", type: "text"}/
              .form-group
                %input#user_username.form-control{name: "user[username]", placeholder: "Username", type: "text"}/
              .form-group
                %input#user_email.form-control{name: "user[email]", placeholder: "Email", type: "text"}/   
              .form-group
                %input#user_password.form-control{name: "user[password]", placeholder: "Password", type: "password", value: ""}/
              .form-group
                %input#user_password.form-control{name: "user[password_confirmation]", placeholder: "Password Confirmation", type: "password", value: ""}/
              %p
                Are you a Filmmaker or Nonprofit?
              .checkbox
                %label
                  %input{name: "user[usertype]", type: "checkbox", value: "filmmaker"}/
                  Filmmaker
              .checkbox
                %label
                  %input{name: "user[usertype]", type: "checkbox", value: "nonprofit"}/
                  Nonprofit

              %input.btn.btn-lg.btn-success.btn-block{type: "submit", value: "Sign Up"}/


