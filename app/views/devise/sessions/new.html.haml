.container
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In
        .panel-body
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            %fieldset
              .form-group
                %label Username
                %input#user_name.form-control{name: "user[username]", placeholder: "Username", type: "text"}/
            %fieldset
              .form-group
                %label Username
                %input#user_name.form-control{name: "user[password]", placeholder: "Password", type: "password"}/
            %fieldset
              .form-group
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me
            %input.btn.btn-lg.btn-success.btn-block{type: "submit", value: "Sign In"}
          = render "devise/shared/links"
